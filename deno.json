{
  "description": "This package provides strongly typed PayloadCMS types, enhancing the type safety and validation of your PayloadCMS queries and operations. It allows you to perform type-safe selections, where clauses, sort operations, and CRUD operations with strong type inference.",
  "author": "soranoo (Freeman)",
  "license": "MIT",
  "tasks": {
    "dev": "deno run --allow-all dev.ts",
    "test:watch": "deno test --watch --allow-read --allow-env --allow-ffi",
    "test": "deno test --allow-read --allow-env --allow-ffi",
    "cli": "deno run --allow-env --allow-read --allow-write --allow-ffi cli.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "build:npm": "deno run -A ./scripts/build-npm.ts",
    "semantic-release": "semantic-release"
  },
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@semantic-release/git": "npm:@semantic-release/git@^10.0.1",
    "@semantic-release/github": "npm:@semantic-release/github@^11.0.4",
    "@semantic-release/npm": "npm:@semantic-release/npm@^12.0.2",
    "@std/assert": "jsr:@std/assert@1",
    "oxc-parser": "npm:oxc-parser@^0.82.3",
    "@/": "./src/",
    "semantic-release": "npm:semantic-release@^24.2.7"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["packages/"]
  },
  "lint": {
    "exclude": ["packages/"]
  }
}
